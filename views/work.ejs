<%- include("partials/header.ejs") %>
        <div class="todo">
            <h2>Work</h2>
                       
            <form class="form" action="/work" method="post">
                <input class="new-item" type="text" name="worktodo" placeholder="Add new task" autocomplete="off" id="inputtodo" required>
                <button class="add" type="submit" name="list" value="date">+</button>
            </form>
            <% if (locals.workItem) { for (i=workItem.length-1; i>=0; i--) {%>
                <div class="item">
                    <input type="checkbox" name="done" id="done">
                    <p>
                    <%= workItem[i] %>
                    </p>
                </div>
            <% }} else if (workItem.length > 0) { %>
                <div class="item">
                    <input type="checkbox" name="done" id="done">
                    <p>
                    <%= workItem[i] %>
                    </p>
                </div>
            <% } %>
        </div>
        <div></div>
    </div>
    
    
</body>
</html>